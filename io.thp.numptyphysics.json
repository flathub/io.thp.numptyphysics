{
    "app-id": "io.thp.numptyphysics",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "21.08",
    "sdk": "org.freedesktop.Sdk",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/aclocal",
        "/share/gtk-doc",
        "/share/man",
        "*.la", "*.a"
    ],
    "rename-desktop-file": "numptyphysics.desktop",
    "rename-icon": "numptyphysics",
    "modules": [
        {
            "name": "numptyphysics",
            "no-autogen": true,
            "make-install-args": [
                "PREFIX=/app"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/thp/numptyphysics/archive/0.3.8.tar.gz",
                    "sha256": "e5581dffbbbac37c0600deb2a1dd53491dd458937d40ac3f1243b4a4ef1d69fb"
                },
                {
                    "type": "file",
                    "path": "io.thp.numptyphysics.appdata.xml"
                }
            ],
            "post-install": [
                "mkdir -p /app/share/appdata",
                "cp io.thp.numptyphysics.appdata.xml /app/share/appdata"
            ]
        }
    ]
}
